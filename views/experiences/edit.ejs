<%- include('../partials/header') %>

<h1>Edit Experience</h1>

<form action="/experiences/<%= experience._id %>?_method=PUT" method="POST" class="experience-form">
  <label>Title:</label>
  <input type="text" name="title" value="<%= experience.title %>" required />

  <label>Day of Week:</label>
  <select name="dayOfWeek" required>
    <option value="">-- Choose a day --</option>
    <option value="Monday" <%= experience.dayOfWeek === 'Monday' ? 'selected' : '' %>>Monday</option>
    <option value="Tuesday" <%= experience.dayOfWeek === 'Tuesday' ? 'selected' : '' %>>Tuesday</option>
    <option value="Wednesday" <%= experience.dayOfWeek === 'Wednesday' ? 'selected' : '' %>>Wednesday</option>
    <option value="Thursday" <%= experience.dayOfWeek === 'Thursday' ? 'selected' : '' %>>Thursday</option>
    <option value="Friday" <%= experience.dayOfWeek === 'Friday' ? 'selected' : '' %>>Friday</option>
    <option value="Saturday" <%= experience.dayOfWeek === 'Saturday' ? 'selected' : '' %>>Saturday</option>
    <option value="Sunday" <%= experience.dayOfWeek === 'Sunday' ? 'selected' : '' %>>Sunday</option>
  </select>

  <label>Mood:</label>
  <input type="text" name="mood" value="<%= experience.mood %>" required />

  <label>Music Genre:</label>
  <input type="text" name="music" value="<%= experience.music %>" required />

  <label>Ambiance:</label>
  <input type="text" name="ambiance" value="<%= experience.ambiance %>" required />

  <label>Playlist URL:</label>
  <input type="text" name="playlistUrl" value="<%= experience.playlistUrl %>" />

  <label>Notes:</label>
  <textarea name="notes" placeholder="Optional details like 'DJ at 9PM'"><%= experience.notes %></textarea>

  <button type="submit">Update Experience</button>
</form>

<a href="/experiences/<%= experience._id %>">‚Üê Back to Experience</a>

<%- include('../partials/footer') %>
