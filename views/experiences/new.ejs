<%- include('../partials/header') %>

<h1>Create New Experience</h1>

<form action="/experiences" method="POST">
  <label for="title">Experience Title:</label>
  <input type="text" name="title" id="title" required />

  <label for="venue">Venue:</label>
  <input type="text" name="venue" id="venue" required />

  <label for="dayOfWeek">Day of the Week:</label>
  <select name="dayOfWeek" id="dayOfWeek" required>
    <option value="">--Select a Day--</option>
    <option value="Monday">Monday</option>
    <option value="Tuesday">Tuesday</option>
    <option value="Wednesday">Wednesday</option>
    <option value="Thursday">Thursday</option>
    <option value="Friday">Friday</option>
    <option value="Saturday">Saturday</option>
    <option value="Sunday">Sunday</option>
  </select>

  <label for="mood">Mood:</label>
  <input type="text" name="mood" id="mood" required />

  <label for="music">Music Genre:</label>
  <input type="text" name="music" id="music" required />

  <label for="ambiance">Ambiance:</label>
  <input type="text" name="ambiance" id="ambiance" required />

  <label for="playlistUrl">Playlist URL (Spotify or SoundCloud):</label>
  <input type="url" name="playlistUrl" id="playlistUrl" />

  <label for="notes">Additional Notes:</label>
  <textarea name="notes" id="notes"></textarea>

  <button type="submit">Create Experience</button>
</form>

<a href="/experiences">‚Üê Back to All Experiences</a>

